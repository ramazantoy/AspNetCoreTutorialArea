@model DirectoryInfo[]
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table>

    <thead>
    <tr>
        <th>Name</th>
        <th>Creation Time</th>
        <th>Full Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.CreationTime</td>
            <td>@item.FullName</td>
        </tr>
    }
    </tbody>
</table>