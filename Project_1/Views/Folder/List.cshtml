@model DirectoryInfo[]
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create">Remove</a>
<table class="table-hover table-bordered">

    <thead>
    <tr>
        <th>Name</th>
        <th>Creation Time</th>
        <th>Full Name</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.CreationTime</td>
            <td>@item.FullName</td>
            <td>
                <a asp-action="Remove" asp-route-folderName="@item.Name">Remove</a>
            </td>
        </tr>
    }
    </tbody>
</table>