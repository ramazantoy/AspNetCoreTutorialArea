@model List<ProductListModel>

@{
    Layout = "_Layout";
}

@{
    @if (Model.Count > 0)
    {
        <div class="text-end">
            <a asp-action="Create" asp-controller="Product">Create New Product</a>
        </div>
        <table class="table">
            <thead>
            <td>Id</td>
            <td>Name</td>
            <td>Price</td>
            <td>Stock</td>
            <td>CategoryId</td>
            <td>Actions</td>
            </thead>
            <tbody>
            @foreach (var productListModel in Model)
            {
                <tr>
                    <td>
                        @productListModel.Id
                    </td>
                    <td>
                        @productListModel.Name
                    </td>
                    <td>
                        @productListModel.Price
                    </td>
                    <td>
                        @productListModel.Stock
                    </td>
                    <td>
                        @productListModel.CategoryId
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="Product" asp-route-id="@productListModel.Id" class="btn btn-warning btn-sm">Update</a>
                        <a asp-action="Remove" asp-controller="Product" asp-route-id="@productListModel.Id" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center">No Product founded.</div>
    }

}