@model Project_7.MVC.ResponseModels.ProductResponseModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Yeni Ürün Ekle</title>
</head>
<body>
@{ if (TempData["errorMessage"] != null)
   {
       <p style="color:red">

           @TempData["errorMessage"]?.ToString()
       </p>
   }
}

<h1>Create Product</h1>
<form asp-action="Create" asp-controller="Home" method="post">
    <label>Ürün Adı:</label>
    <input type="text" asp-for="@Model.Name" />
    <br />
    <hr />
    <label>Price:</label>
    <input asp-for="@Model.Price" />
    <br />
    <hr />
    <label>Stock:</label>
    <input asp-for="@Model.Stock" />
    <br />
    <hr />

    <div>
        <a asp-action="Index" asp-controller="Home">Go Back</a>
        <button type="submit">Submit</button>
    </div>
</form>
</body>
</html>