@model Project_5.Models.UserCreateModel;
@{
    Layout = "_Layout";
}

<form asp-action="Create" method="post" class="p-4 w-75 mx-auto shadow">
    <div class="mb-3">
        <label>User Name</label>
        <input asp-for="UserName" class="form-control"/>
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>
    <div class="mb-3">
        <label>Password</label>
        <input asp-for="Password" class="form-control" type="password"/>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="mb-3">
        <label>ConfirmPassword</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password"/>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control"/> @*type="email"*@
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label>Gender</label>
        <select asp-for="Gender" class="form-control">
            <option value="" disabled selected>Select Gender</option>
            <option value="Man">Man</option>
            <option value="Woman">Woman</option>
        </select>
        <span class="text-danger" asp-validation-for="Gender"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
    <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
</form>