@model Project_5.Models.Home.UserCreateModel;
@{
    Layout = "_NoNavbarLayout";
}

<form asp-action="SignUp" method="post" class="p-4 w-50 mx-auto shadow rounded bg-light">
    <h2 class="text-center mb-4">Sign Up</h2>
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input asp-for="UserName" class="form-control" placeholder="Enter your username"/>
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password"/>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password"/>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email"/>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Gender</label>
        <select asp-for="Gender" class="form-control">
            <option value="" disabled selected>Select Gender</option>
            <option value="Man">Male</option>
            <option value="Woman">Female</option>
        </select>
        <span class="text-danger" asp-validation-for="Gender"></span>
    </div>
    <div class="mb-3 text-center">
        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
    </div>
    <div class="text-center mt-3">
        <p>Already have an account? <a asp-action="SignIn" asp-controller="Home">Login here</a>.</p>
    </div>
    <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
</form>