@model ApplicationUser
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Create Account</title>
</head>
<body>
<div class="row mt-3">
    <div class="col-6">
        <h3>User Info</h3>
        <p>User Name : @Model.Name</p>
        <p>User Last Name: @Model.Surname</p>
        <p>Active Account Count : <getAccountCount application-user-id="Model.Id"></getAccountCount></p>
    </div>

    <div class="col-6">
        <h4>Create Operation</h4>
    </div>
</div>
</body>
</html>