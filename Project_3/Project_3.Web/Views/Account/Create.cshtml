@model UserListModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Create Account</title>
</head>
<body>
<div class="row mt-3">
    <div class="col-6">
        <h3>User Info</h3>
        <p>User Name : @Model.Name</p>
        <p>User Last Name: @Model.Surname</p>
        <p>Active Account Count : <getAccountCount application-user-id="Model.Id"></getAccountCount></p>
    </div>

    <div class="col-6">
        <form method="post" asp-action="Create"asp-controller="Account">
            <input type="hidden" name="ApplicationUserId" value="@Model.Id"/>
            <div class="mb-3">
                <label class="form-label">Account Number</label>
                <input type="number" class="form-control" name="AccountNumber"/>
            </div>
            <div class="mb-3">
                <label class="form-label">Account Balance</label>
                <input type="number" class="form-control" name="Balance"/>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Save</button>
            </div>

        </form>

    </div>
</div>
</body>
</html>