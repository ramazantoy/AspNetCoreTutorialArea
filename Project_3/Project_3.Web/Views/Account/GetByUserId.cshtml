@model List<AccountListModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <title>GetByUserId</title>
</head>
<body>
<div class="row mt-4">
    <div class="col-6">
        <h5>User Info</h5>
        <div class="card">
            <div class="card-body">
                <p class="card-text">Full Name :@ViewBag.FullName </p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to user list</a>
            </div>
        </div>
    </div>
    <div class="col-6">
        <h5>Account Info</h5>

        @if (Model.Count > 0)
        {
            foreach (var accountListModel in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Account Number : @accountListModel.AccountNumber</h5>
                        <p class="card-text">Balance : @accountListModel.Balance</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-primary" role="alert">
                User dont have an account.
            </div>
        }


    </div>
</div>
</body>
</html>