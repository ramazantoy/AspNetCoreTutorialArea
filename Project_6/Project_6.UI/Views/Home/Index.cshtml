
@model List<Project_6.Dtos.ProvidedServiceDtos.ProvidedServiceListDto>
@{
    Layout = "_Layout";
}

@for (var i = 0; i < @Model.Count; i++)
{
    <section id="scroll">
        <div class="container px-5">
            <div class="row gx-5 align-items-center">
                <div class="col-lg-6 @(i%2==0 ? "order-lg-2" : "")">
                    <div class="p-5">
                        <img class="img-fluid rounded-circle" src="/@Model[i].ImagePath" @*alt="..."*@/>
                    </div>
                </div>
                <div class="col-lg-6 @(i%2==1 ? "order-lg-1" : "") ">
                    <div class="p-5">
                        <h2 class="display-4">@Model[i].Title</h2>
                        <p>@Model[i].Description</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


