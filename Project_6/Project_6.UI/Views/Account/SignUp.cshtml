@model UserCreateModel

@{
    Layout = "_Layout";
}

<div class="mt-4">
    <form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
        <div class="mb-3">
            <label>First Name :</label>
            <input asp-for="@Model.FirstName" class="form-control"/>
        </div>
        <div class="mb-3">
            <label>Last Name :</label>
            <input asp-for="@Model.LastName" class="form-control"/>
        </div>
        <div class="mb-3">
            <label>User name :</label>
            <input asp-for="@Model.UserName" class="form-control"/>
        </div>
        <div class="mb-3">
            <label>Phone Number :</label>
            <input asp-for="@Model.PhoneNumber" class="form-control"/>
        </div>
        <div class="mb-3">
            <select class="form-select" asp-items="@Model.Genders" asp-for="GenderId">
                <option value="0">Select a gender.</option>
            </select>
      
        </div>
        <div class="mb-3">
            <label>Password :</label>
            <input  type="password" asp-for="@Model.Password" class="form-control"/>
        </div>
        <div class="mb-3">
            <label>Confirm Password :</label>
            <input  type="password" asp-for="@Model.ConfirmPassword" class="form-control"/>
        </div>
        <div class="mb-3 text-lg-end">
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
    </form>
</div>

